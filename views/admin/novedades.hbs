<div class="postition">
  <div class="box">
    <div class="contenedor">
      <h3 class="tituloNovedades">Bienvenido a Novedades
        <span>{{usuario}}!!</span></h3>
      <p class="parrafo">ya puedes cargar las nuevas novedades</p>
      <div>
        <table>
          <thead>
            <tr>
              <td>Id</td>
              <td>Titulo</td>
              <td>Acciones</td>
            </tr>
          </thead>
          {{#each novedades}}
            <tr>
              <td>{{id}}</td>
              <td>{{titulo}}</td>
              <td>
                <a
                  href="/admin/novedades/modificar/{{id}}"
                  class="anovedades"
                >Modificar
                  <i class="fas fa-pencil-alt"></i></a>
                <a
                  href="/admin/novedades/eliminar/{{id}}"
                  class="anovedades"
                >Eliminar
                  <i class="fas fa-trash-alt"></i></a>
              </td>
            </tr>
          {{/each}}
        </table>
      </div>
      <div class="agregarnovedades">
        <a href="/admin/novedades/agregar" class="anovedades">Agregar
          <i class="fas fa-plus"></i></a>
      </div>
      <div class="cerrar">
        <p class="cerrarsesion">Cerrar sesion<a><i
              class="fas fa-sign-out-alt"
            ></i></a>
        </p>
      </div>
    </div>
  </div>
</div>